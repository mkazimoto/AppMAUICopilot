<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CameraApp.MainShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CameraApp.Views"
    Title="CameraApp">

    <TabBar>
        <ShellContent
            Title="Câmera"
            Icon="camera"
            ContentTemplate="{DataTemplate views:CameraPage}"
            Route="CameraPage" />

        <ShellContent
            Title="Mapa"
            Icon="map"
            ContentTemplate="{DataTemplate views:MapPage}"
            Route="MapPage" />

        <ShellContent
            Title="Postura"
            Icon="person"
            ContentTemplate="{DataTemplate views:PosturePage}"
            Route="PosturePage" />

        <ShellContent
            Title="Formulários"
            Icon="document"
            ContentTemplate="{DataTemplate views:FormListPage}"
            Route="FormListPage" />
    </TabBar>

    <!-- Toolbar com botão de logout -->
    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" Padding="10,0">
            <Label Grid.Column="0" 
                   Text="TOTVS Camera App" 
                   VerticalOptions="Center"
                   FontAttributes="Bold" 
                   TextColor="White" />
            <Button Grid.Column="1"
                    Text="Sair"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="12"
                    Clicked="OnLogoutClicked" />
        </Grid>
    </Shell.TitleView>

</Shell>