<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CameraApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CameraApp.Views"
    xmlns:services="clr-namespace:CameraApp.Services"
    Title="{Binding [AppShell_Title], Source={x:Static services:LocalizationResourceManager.Instance}}"
    Shell.TitleColor="{StaticResource Primary}"
    Shell.NavBarIsVisible="True"
    Shell.TabBarIsVisible="False">

    <!-- Tela de Login como única página inicial -->
    <ShellContent
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

</Shell>
