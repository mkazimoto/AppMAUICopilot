<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CameraApp.Views.FormListPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CameraApp.ViewModels"
             xmlns:models="clr-namespace:CameraApp.Models"
             xmlns:services="clr-namespace:CameraApp.Services"
             x:DataType="viewmodels:FormListViewModel"
             Title="{Binding [FormList_Title], Source={x:Static services:LocalizationResourceManager.Instance}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header com busca -->
        <Border Grid.Row="0"
                BackgroundColor="{StaticResource Primary}"
                Padding="2"
                StrokeShape="RoundRectangle 10"
                Margin="10,5">
            <Grid Padding="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Busca por tÃ­tulo -->
                <Border Grid.Column="0"
                        BackgroundColor="White"
                        StrokeShape="RoundRectangle 8"
                        Padding="10,5"
                        Margin="0,0,10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               Text="ðŸ”"
                               FontSize="16"
                               VerticalOptions="Center"
                               Margin="0,0,5,0" />

                        <Entry Grid.Column="1"
                               Placeholder="{Binding [FormList_SearchPlaceholder], Source={x:Static services:LocalizationResourceManager.Instance}}"
                               Text="{Binding SearchTitle}"
                               TextColor="{StaticResource Gray900}"
                               PlaceholderColor="{StaticResource Gray600}"
                               BackgroundColor="Transparent"
                               VerticalOptions="Center"
                               ReturnCommand="{Binding SearchByTitleCommand}" />
                    </Grid>
                </Border>             

                <!-- BotÃ£o Buscar -->
                <Button Grid.Column="2"
                        Text="ðŸ”"
                        Command="{Binding SearchByTitleCommand}"
                        BackgroundColor="White"
                        TextColor="{StaticResource Primary}"
                        CornerRadius="8"
                        WidthRequest="50"
                        Padding="5" />
            </Grid>
        </Border>

        <!-- BotÃµes de aÃ§Ã£o e indicador de filtros ativos -->
        <Grid Grid.Row="1" 
              Margin="10,5"
              ColumnSpacing="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Indicador de filtros ativos -->
            <Border Grid.Column="0"
                    BackgroundColor="{StaticResource Secondary}"
                    StrokeShape="RoundRectangle 5"
                    Padding="10,5"
                    IsVisible="{Binding HasActiveFilters}">
                <Label Text="{Binding ActiveFiltersCount, StringFormat='ðŸ” {0} filtros ativos'}"
                       TextColor="White"
                       FontSize="12"
                       VerticalOptions="Center" />
            </Border>


            <!-- BotÃ£o Filtros AvanÃ§ados -->
            <Button Grid.Column="1"
                    Text="{Binding [FormList_AdvancedFilters], Source={x:Static services:LocalizationResourceManager.Instance}}"
                    Command="{Binding OpenAdvancedFiltersCommand}"
                    BackgroundColor="White"
                    TextColor="{StaticResource Primary}"
                    CornerRadius="8"
                    Padding="15,5"
                    Margin="0,0,5,0" />


            <!-- BotÃ£o Novo -->
            <Button Grid.Column="2"
                    Text="{Binding [FormList_New], Source={x:Static services:LocalizationResourceManager.Instance}}"
                    Command="{Binding CreateNewFormCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="5"
                    Padding="15,5" />

            <!-- BotÃ£o Limpar Filtros -->
            <Button Grid.Column="3"
                    Text="{Binding [FormList_ClearFilters], Source={x:Static services:LocalizationResourceManager.Instance}}"
                    Command="{Binding ClearFiltersCommand}"
                    BackgroundColor="{StaticResource Secondary}"
                    TextColor="White"
                    CornerRadius="5"
                    Padding="15,5"
                    IsVisible="{Binding HasActiveFilters}" />
        </Grid>

        <!-- Lista de formulÃ¡rios -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsLoading}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Forms}"
                            RemainingItemsThreshold="3"
                            RemainingItemsThresholdReachedCommand="{Binding LoadMoreFormsCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Form">
                        <Grid Padding="10">
                            <Border BackgroundColor="{StaticResource White}"
                                    Padding="5"
                                    StrokeShape="RoundRectangle 10">
                            <StackLayout BackgroundColor="White" Padding="5">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:FormListViewModel}}, Path=EditFormCommand}"
                                                        CommandParameter="{Binding .}" />
                                </StackLayout.GestureRecognizers>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- TÃ­tulo -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Title}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}" />

                                    <!-- ID do formulÃ¡rio -->
                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding FormId, StringFormat='#{0}'}"
                                           FontSize="14"
                                           TextColor="{StaticResource Gray600}"
                                           VerticalOptions="Start" />

                                    <!-- InformaÃ§Ãµes adicionais -->
                                    <StackLayout Grid.Row="1" Grid.ColumnSpan="2"
                                                 Orientation="Horizontal"
                                                 Margin="0,5">
                                        <Label Text="{Binding [FormList_Category], Source={x:Static services:LocalizationResourceManager.Instance}}"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray600}" />
                                        <Label Text="{Binding CategoryId}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Gray900}" />
                                        
                                        <Label Text="{Binding [FormList_Status], Source={x:Static services:LocalizationResourceManager.Instance}}"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray600}"
                                               Margin="15,0,0,0" />
                                        <Label Text="{Binding StatusFormId}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Gray900}" />
                                    </StackLayout>

                                    <!-- PontuaÃ§Ã£o e tipo -->
                                    <StackLayout Grid.Row="2" Grid.ColumnSpan="2"
                                                 Orientation="Horizontal"
                                                 Margin="0,5">
                                        <Label Text="{Binding [FormList_Score], Source={x:Static services:LocalizationResourceManager.Instance}}"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray600}" />
                                        <Label Text="{Binding TotalScore}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Primary}" />
                                        
                                        <Label Text="{Binding [FormList_Sequential], Source={x:Static services:LocalizationResourceManager.Instance}}"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray600}"
                                               Margin="15,0,0,0" />
                                        <Label Text="{Binding SequentialScript, StringFormat='{0}'}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Gray900}" />
                                    </StackLayout>

                                    <!-- Data de criaÃ§Ã£o e modificaÃ§Ã£o -->
                                    <StackLayout Grid.Row="3" Grid.ColumnSpan="2"
                                                 Orientation="Horizontal"
                                                 Margin="0,5">
                                        <Label Text="{Binding [FormList_CreatedAt], Source={x:Static services:LocalizationResourceManager.Instance}}"
                                               FontSize="11"
                                               TextColor="{StaticResource Gray500}" />
                                        <Label Text="{Binding RecCreatedOn, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                               FontSize="11"
                                               TextColor="{StaticResource Gray700}" />
                                        
                                        <Label Text="{Binding [FormList_By], Source={x:Static services:LocalizationResourceManager.Instance}}"
                                               FontSize="11"
                                               TextColor="{StaticResource Gray500}"
                                               Margin="5,0" />
                                        <Label Text="{Binding RecCreatedBy}"
                                               FontSize="11"
                                               FontAttributes="Italic"
                                               TextColor="{StaticResource Gray700}" />
                                    </StackLayout>
                                    
                                    <!-- Indicador de toque -->
                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="âœï¸"
                                           FontSize="16"
                                           VerticalOptions="End"
                                           HorizontalOptions="End"
                                           Margin="0,0,0,5" />
                                </Grid>
                            </StackLayout>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!-- Lista vazia -->
                <CollectionView.EmptyView>
                    <StackLayout HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Padding="20">
                        <Label Text="{Binding [FormList_Empty], Source={x:Static services:LocalizationResourceManager.Instance}}"
                               FontSize="16"
                               TextColor="{StaticResource Gray500}"
                               HorizontalOptions="Center" />                        
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

        <!-- Loading indicator -->
        <ActivityIndicator Grid.Row="2"
                          IsVisible="{Binding IsLoading}"
                          IsRunning="{Binding IsLoading}"
                          Color="{StaticResource Primary}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center" />
    </Grid>
</ContentPage>