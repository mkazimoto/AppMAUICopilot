<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CameraApp.Views.FormListPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CameraApp.ViewModels"
             xmlns:models="clr-namespace:CameraApp.Models"
             x:DataType="viewmodels:FormListViewModel"
             Title="Formulários">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header com filtros -->
    <Border BackgroundColor="{StaticResource Primary}"
        Padding="2"
        StrokeShape="RoundRectangle 10">
        <StackLayout Grid.Row="0" 
               BackgroundColor="{StaticResource Primary}"
               Padding="15"
               Margin="10,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Filtros -->
                <Picker Grid.Row="0" Grid.Column="0"
                        Title="Categoria"
                        SelectedIndex="{Binding SelectedCategoryId}"
                        TextColor="White"
                        TitleColor="White"
                        Margin="5">
                    <Picker.Items>
                        <x:String>Todas as Categorias</x:String>
                        <x:String>Inspeção</x:String>
                        <x:String>Segurança</x:String>
                        <x:String>Qualidade</x:String>
                    </Picker.Items>
                </Picker>

                <Picker Grid.Row="0" Grid.Column="1"
                        Title="Status"
                        SelectedIndex="{Binding SelectedStatusId}"
                        TextColor="White"
                        TitleColor="White"
                        Margin="5">
                    <Picker.Items>
                        <x:String>Todos os Status</x:String>
                        <x:String>Ativo</x:String>
                        <x:String>Inativo</x:String>
                        <x:String>Em Análise</x:String>
                    </Picker.Items>
                </Picker>

                <Button Grid.Row="0" Grid.Column="2"
                        Text="Filtrar"
                        Command="{Binding FilterByCategoryCommand}"
                        BackgroundColor="White"
                        TextColor="{StaticResource Primary}"
                        Margin="5" />

                <!-- Filtro por data -->
                <StackLayout Grid.Row="1" Grid.ColumnSpan="3"
                             Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Margin="5">
                    <DatePicker Date="{Binding StartDate}"
                                TextColor="White"
                                Margin="5,0" />
                    <Label Text="até"
                           TextColor="White"
                           VerticalOptions="Center"
                           Margin="10,0" />
                    <DatePicker Date="{Binding EndDate}"
                                TextColor="White"
                                Margin="5,0" />
                    <Button Text="Período"
                            Command="{Binding FilterByDateRangeCommand}"
                            BackgroundColor="White"
                            TextColor="{StaticResource Primary}"
                            Margin="10,0" />
                </StackLayout>
            </Grid>
        </StackLayout>
        </Border>

        <!-- Botões de ação -->
        <StackLayout Grid.Row="1" 
                     Orientation="Horizontal"
                     HorizontalOptions="End"
                     Margin="10,5">
            <Button Text="+ Novo"
                    Command="{Binding CreateNewFormCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    Margin="5,0" />
            <Button Text="Limpar Filtros"
                    Command="{Binding ClearFiltersCommand}"
                    BackgroundColor="{StaticResource Secondary}"
                    Margin="5,0" />
            <Button Text="Atualizar"
                    Command="{Binding RefreshCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    Margin="5,0" />
        </StackLayout>

        <!-- Lista de formulários -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsLoading}"
                     Command="{Binding RefreshCommand}">
            <CollectionView ItemsSource="{Binding Forms}"
                            RemainingItemsThreshold="3"
                            RemainingItemsThresholdReachedCommand="{Binding LoadMoreFormsCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Form">
                        <Grid Padding="10">
                            <Border BackgroundColor="{StaticResource White}"
                                    Padding="5"
                                    StrokeShape="RoundRectangle 10">
                            <StackLayout BackgroundColor="White" Padding="5">
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:FormListViewModel}}, Path=EditFormCommand}"
                                                        CommandParameter="{Binding .}" />
                                </StackLayout.GestureRecognizers>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Título -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Title}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Primary}" />

                                    <!-- ID do formulário -->
                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding FormId, StringFormat='#{0}'}"
                                           FontSize="14"
                                           TextColor="{StaticResource Gray600}"
                                           VerticalOptions="Start" />

                                    <!-- Informações adicionais -->
                                    <StackLayout Grid.Row="1" Grid.ColumnSpan="2"
                                                 Orientation="Horizontal"
                                                 Margin="0,5">
                                        <Label Text="Categoria:"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray600}" />
                                        <Label Text="{Binding CategoryId}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Gray900}" />
                                        
                                        <Label Text="Status:"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray600}"
                                               Margin="15,0,0,0" />
                                        <Label Text="{Binding StatusFormId}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Gray900}" />
                                    </StackLayout>

                                    <!-- Pontuação e tipo -->
                                    <StackLayout Grid.Row="2" Grid.ColumnSpan="2"
                                                 Orientation="Horizontal"
                                                 Margin="0,5">
                                        <Label Text="Pontuação:"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray600}" />
                                        <Label Text="{Binding TotalScore}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Primary}" />
                                        
                                        <Label Text="Sequencial:"
                                               FontSize="12"
                                               TextColor="{StaticResource Gray600}"
                                               Margin="15,0,0,0" />
                                        <Label Text="{Binding SequentialScript, StringFormat='{0}'}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource Gray900}" />
                                    </StackLayout>

                                    <!-- Data de criação e modificação -->
                                    <StackLayout Grid.Row="3" Grid.ColumnSpan="2"
                                                 Orientation="Horizontal"
                                                 Margin="0,5">
                                        <Label Text="Criado em:"
                                               FontSize="11"
                                               TextColor="{StaticResource Gray500}" />
                                        <Label Text="{Binding RecCreatedOn, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                               FontSize="11"
                                               TextColor="{StaticResource Gray700}" />
                                        
                                        <Label Text="por"
                                               FontSize="11"
                                               TextColor="{StaticResource Gray500}"
                                               Margin="5,0" />
                                        <Label Text="{Binding RecCreatedBy}"
                                               FontSize="11"
                                               FontAttributes="Italic"
                                               TextColor="{StaticResource Gray700}" />
                                    </StackLayout>
                                    
                                    <!-- Indicador de toque -->
                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="✏️"
                                           FontSize="16"
                                           VerticalOptions="End"
                                           HorizontalOptions="End"
                                           Margin="0,0,0,5" />
                                </Grid>
                            </StackLayout>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <StackLayout HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Padding="20">
                        <Label Text="Nenhum formulário encontrado"
                               FontSize="16"
                               TextColor="{StaticResource Gray500}"
                               HorizontalOptions="Center" />
                        <Button Text="Carregar Formulários"
                                Command="{Binding LoadFormsCommand}"
                                BackgroundColor="{StaticResource Primary}"
                                Margin="0,10" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

        <!-- Loading indicator -->
        <ActivityIndicator Grid.Row="2"
                          IsVisible="{Binding IsLoading}"
                          IsRunning="{Binding IsLoading}"
                          Color="{StaticResource Primary}"
                          VerticalOptions="Center"
                          HorizontalOptions="Center" />
    </Grid>
</ContentPage>